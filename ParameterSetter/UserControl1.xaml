<Window x:Class="ParameterSetter.UserControl1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:ParameterSetter.ViewModel"
        xmlns:local="clr-namespace:ParameterSetter"
        Height="452.666"
        Width="300"
        WindowStartupLocation="CenterScreen"
        Title="{Binding WindowTitle}"
        Topmost="True"
        WindowStyle="ToolWindow">
    <Window.DataContext>
        <vm:PanelEvent />
    </Window.DataContext>

    <Grid Margin="0,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>

        <Button Height="30"
                Width="100"
                Command="{Binding ButtonCommand}"
                Content="Start/Stop" />

        <StackPanel Grid.Row="1"
                    IsEnabled="{Binding Subscribed}"
                    Margin="10,13,10,10"
                    Orientation="Vertical"
                    Name="StackPanelParams">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="5,5,5,5">
                <TextBlock Width="70">
                Mark
                </TextBlock>
                <TextBox Text="{Binding MarkText,UpdateSourceTrigger=PropertyChanged}"
                         Width="200" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="5,5,5,5">
                <TextBlock Width="70">
                Comments
                </TextBlock>
                <TextBox Text="{Binding CommentsText,UpdateSourceTrigger=PropertyChanged}"
                         Width="200" />
            </StackPanel>
            <Button Height="30"
                    Width="100"
                    Command="{Binding AddCommand}"
                    Content="Add" />
            <Label Content="Nothing selected"
                   x:Name="OutputLabel"
                   Height="0"
                   Visibility="Hidden" />
            <StackPanel Orientation="Horizontal">
                <ItemsControl ItemsSource="{Binding Fields}"
                              Name="myItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:InputItemControl />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <Button Command="{Binding ApplyCommand}"
                    Content="Set Parameters"
                    Height="30"
                    Width="100"
                    IsEnabled="{Binding Subscribed}" />

            <ListBox Margin="0,10,0,0"
                     Name="newLbox"
                     Height="168"
                     SelectedItem="{Binding SelectedRvtCategory}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"></ColumnDefinition>
                                <ColumnDefinition Width="200"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <ListBoxItem>
                                <TextBlock Text="{Binding Item2, StringFormat='({0})  '}"
                                           VerticalAlignment="Center">
                                </TextBlock>
                            </ListBoxItem>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding Item1}"
                                       VerticalAlignment="Center"></TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Margin="0,10,0,10"
                    Command="{Binding UpdateSelectionCommand}"
                    Content="Select Elements"
                    Height="30"
                    Width="100"
                    IsEnabled="{Binding Subscribed}" />
        </StackPanel>
    </Grid>
</Window>

    